{
  "name": "mixie",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "packages/email/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "start": "turbo run start",
    "dev": "turbo run dev",
    "clean:all": "turbo run clean:all && rm -rf node_modules/ && rm -rf .turbo",
    "format": "biome format --write .",
    "lint": "turbo lint && manypkg check",
    "typecheck": "turbo typecheck"
  },
  "dependencies": {
    "@manypkg/cli": "^0.21.4",
    "@turbo/gen": "^1.13.3",
    "@biomejs/biome": "1.7.3",
    "dotenv-cli": "^7.4.2",
    "eslint": "^9.2.0",
    "prettier": "^3.2.5",
    "turbo": "^1.13.3"
  },
  "devDependencies": {
    "prettier-plugin-tailwindcss": "^0.5.14"
  }
}
