rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /recipes/{document=**} {
        allow read, write: if true;
    }
    match /users/{document=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == request.resource.data.uid;
    }
  }
}
