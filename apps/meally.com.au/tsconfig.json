{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@lib/*": [
        "src/common/libs/*"
      ],
      "@components/*": [
        "src/common/components/*"
      ],
      "@component_styles/*": [
        "src/common/components/styles/*"
      ],
      "@styles/*": [
        "src/common/styles/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "../../packages/tests/ui.test/RecipeCard.test.tsx",
    "../../packages/ui/modules/RecipeCard.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
