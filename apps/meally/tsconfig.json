{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "strictNullChecks": true,
    "baseUrl": "./",
    "paths": {
      "@lib/*": ["src/common/lib/*"],
      "@components/*": ["src/common/components/*"],
      "@styles/*": ["src/common/styles/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
